<% provide(:title, t('.title')) %>

<% if logged_in? %>

<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= t('.feed') %></h3>
        <%= render 'shared/feed' %>
    </div>
</div>

<% else %>

<div class="center jumbotron">
    <h1><%= t('.welcome') %></h1>
    <h2>
        <%= t('.home_p')[0] %>
        <a href="https://www.railstutorial.org/"><%= t('.home_p')[1] %></a>
        <%= t('.home_p')[2] %>
    </h2>

    <%= link_to t('.cto'), signup_path, class: "btn btn-lg btn-primary" %>
</div>


<%= link_to image_tag("rails.svg", alt: t('img.alt.rails_logo'), width: "200"),
                      "https://rubyonrails.org/" %>


<%= link_to image_tag("kitten.jpg", alt: t('img.alt.kitten'), class: "cover-image"),
                      "https://rubyonrails.org/" %>

<% end %>